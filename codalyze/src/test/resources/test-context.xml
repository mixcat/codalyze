<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
		<property name="url"><value>jdbc:hsqldb:mem:testdb</value></property>
		<property name="username"><value>sa</value></property>
		<property name="password"><value></value></property>
		<property name="defaultAutoCommit"><value>false</value></property>
	</bean>
	
	
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    	<constructor-arg>
       		<ref bean="dataSource" />
    	</constructor-arg>    
  	</bean>
  	
	<bean id="mySessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"
		lazy-init="false">
		<property name="dataSource" ref="dataSource" />
		<property name="mappingResources">
			<list>
				<value>codalyze/JavancssImports.hbm.xml</value>
				<value>codalyze/JavancssFunctions.hbm.xml</value>
				<value>codalyze/JavancssPackages.hbm.xml</value>
				<value>codalyze/JavancssObjects.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			 <props>
		        <prop key="hibernate.default_schema">${hibernate.default_schema}</prop>
		        <prop key="hbm2ddl.auto">create</prop>
      		</props>
		</property>
	</bean>
	
	
</beans>